<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
  
    <xs:annotation>
      <xs:appinfo>
        <dita:domainsModule xmlns:dita="http://dita.oasis-open.org/architecture/2005/">a(props contentclass)</dita:domainsModule>
      </xs:appinfo>
      <xs:documentation/>
      
    </xs:annotation>
  
  <xs:attributeGroup name="lceContentclassAtt-d-attribute">
    <xs:attribute name="contentclass" type="xs:string"  use="optional">
      <xs:annotation>
        <xs:documentation>this attribute should be used to specify the semantic meaning of a generic element e.g. div
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>
  
  <xs:attributeGroup name="lceIconclassAtt-d-attribute">
    <xs:attribute name="icon" type="xs:string">
      <xs:annotation>
        <xs:documentation>In this attribut there can be given a code for a certain icon. This also can be a unicode symbol.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>

</xs:schema>
