<?xml version="1.0" encoding="UTF-8"?>
<learningAssessment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:theddita13:names:dita:xsd:learningAssessment.xsd" id="gm1">
    <title>Gap Match</title>
    <learningAssessmentbody>
        <lcInteraction>
            <lcGapMatch>
                <lcQuestion2>Identify the missing words in this famous quote from Shakespeare's Richard III.
                    <draft-comment author="Birgit">Usually in an application all answer options are standing aside and can be dragged en dropped into the gaps</draft-comment></lcQuestion2>
                <lcInlineInteractionText>
                    <p>Now is the <lcGapOption>
                        <lcAnswerContentInline>winter</lcAnswerContentInline><lcCorrectResponse2></lcCorrectResponse2>
                    </lcGapOption> of our discontent</p>
                    <p>Made glorious <lcGapOption>
                        <lcAnswerContentInline>summer</lcAnswerContentInline><lcCorrectResponse2></lcCorrectResponse2>
                    </lcGapOption> by this sun of York;</p>
                    <p>And all the clouds that lour'd upon our house</p>
                    <p>In the deep bosom of the ocean buried.</p>
                </lcInlineInteractionText>
                <lcExtraGapOptions>
                    <lcGapOption>
                        <lcAnswerContentInline>spring</lcAnswerContentInline>
                    </lcGapOption>
                    <lcGapOption>
                        <lcAnswerContentInline>autumn</lcAnswerContentInline>
                    </lcGapOption>
                </lcExtraGapOptions>
            </lcGapMatch>
        </lcInteraction>
    </learningAssessmentbody>
</learningAssessment>
